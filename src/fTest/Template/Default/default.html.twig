{% import 'macros.twig' as macros %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html  xmlns="http://www.w3.org/1999/xhtml" >
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% block htmlTitle %}
            <title>{{ config.getProjectTitle() }}</title>
        {% endblock %}

        {% block css %}
            <link rel="stylesheet" href="./asset/js/syntaxhighlighter_3.0.83/styles/shCore.css" />
            <link rel="stylesheet" href="./asset/js/syntaxhighlighter_3.0.83/styles/shThemeDefault.css" />
            <link rel="stylesheet" href="./asset/css/ftest.css" />
        {% endblock %}

    </head>
    <body>
        <div class="wrapper">

                <h1>
                    {% if config.getProjectLogo()  %}
                        <img src="{{ config.getProjectLogo() }}" />
                    {% endif %}

                    {{ config.getProjectTitle() }}
                </h1>

            {% block pageIntro %}
                {% include 'pageIntro.html.twig' %}
            {% endblock %}

            <div class="stage">
                <div class="left">
                    {% include 'navigation.html.twig' with {'tests':tests} %}
                </div>

                <div class="content">
                    {% block test %}{% endblock %}
                </div>
            </div>
            {% block javascript %}
                <script type="text/javascript" src="./asset/js/ext-core-debug.js"></script>
                <script src="./asset/js/syntaxhighlighter_3.0.83/scripts/shCore.js" type="text/javascript"></script>
                <script src="./asset/js/syntaxhighlighter_3.0.83/scripts/shBrushPhp.js" type="text/javascript"></script>
                <script type="text/javascript" src="./asset/js/ftest.js"></script>
            {% endblock %}

            <div class="footer">
                <p>generated by <a target="blank" class="fTest" href="{{ config.getMyUrl() }}">fTest</a></p>
            </div>
        </div>
    </body>
</html>